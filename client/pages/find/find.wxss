page{
  width: 100%;
  height: 100%;
}
.swiper-tab{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 24rpx;
    padding-bottom: 20rpx;
}
.swiper-tab-item{
    width: 124rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    background: #addc81;
    color: #eee;
    font-size: 22rpx; 
    border-radius: 80rpx;
}
.active{
  background: white;
  color:#addc81;
}
.tab-box {
  width: 100%;
  height:100%;
}
.tab-box .view-box{
  margin-top: 12rpx;
}
.view-box .img{
   position: relative; 
  width: 100%;
  height: 356rpx;
  overflow: hidden
}
.view-box .img image {
  width: 100%;
  height: 100%;
}
.view-box .img .title {
  position: absolute;
  display: block;
  width: 100%;
  height: 1000%;
  background: rgba(0, 0, 0, .75);
  font-size: 30rpx;
  text-align: center;
  line-height: 356rpx;
  font-weight: bold;
  color: #eee;
}